extends ./layouts/layout
block user
  .background2.hidden
  .background3.hidden
  header.full-screen-absolute.flex-align-center
    #naming
      p Please input your table name below
      input.border(type='text')
      .border.small-btn
        img(src="../img/ok.png")
    #start.hidden
      img.title(src="./img/title.png")
      #notification.hidden
        p Beware! Pressing button below will kick out current user.
        a.border.small-btn
          img(src="../img/ok.png")
      .start.border
        img(src="../img/user/start.png")
  #play.hidden
    .message
      img(src="../img/user/start2.png")
      p Win this challenge for 
        span.player-name
        |  by completing a row, column, or diagonal.
    - var n = 1;
    ul.question
      while n <= 9
        - n++
        li.question-box.flex-align-center.faded-border
          span.status(status="0")
    .answer.hidden
      .instruction
        img(src="../img/user/please_select.png")
      .options
      .submit.border.small-btn
        img(src="../img/submit.png")
  script(src='javascripts/user-actions.js')
